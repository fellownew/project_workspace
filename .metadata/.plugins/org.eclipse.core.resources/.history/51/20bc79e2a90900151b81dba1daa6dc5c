		<script type="text/javascript">
			$(function() {			
				$('#da-slider').cslider();		
			});
			function slide(){
				$.ajax({
					url:"slide.do",
					type:"POST",
					dataType:"json",
					success:function(res){
						if(res=='success'){
							document.getElementById("buyerLogin").submit();
						}else{
							$("#bIdErr").hide();
							$("#bPasswordErr").hide();
							$("#bLoginError").show();
							return false;
						}
					},
					error:function(a,b,c){
						alert(a+b+c);
					}
				});
			}
		</script>	

