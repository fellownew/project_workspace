<!-- Definitions for Tiles documentation   -->

<tiles-definitions>
	<definition name="template" template="/WEB-INF/view/layout/template.jsp">
		<put-attribute name="header" value="/layout/header.jsp"/>
		<put-attribute name="nav" value="/layout/nav.jsp"/>
		<put-attribute name="aside" value="/layout/aside.jsp"/>
		<put-attribute name="footer" value="/layout/footer.jsp"/>
	</definition>

	<definition name="*.tiles" extends="template">
		<put-attribute name="body" value="/body/{1}.jsp"/>
	</definition>
	<definition name="*/*.tiles" extends="template">
		<put-attribute name="body" value="/body/{1}/{2}.jsp"/>
	</definition>
	
</tiles-definitions>
