package kr.co.taommall.common.controller;

import java.util.List;
import java.util.Map;

import kr.co.taommall.product.service.ProductService;
import kr.co.taommall.product.vo.Product;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.servlet.ModelAndView;

@Controller
@RequestMapping
public class CommonController {
	
	@Autowired
	ProductService service;
	
	@RequestMapping("/list.do")
	public String selectList(@RequestParam String search, @ModelAttribute Product product,Model model){
		List<Product> list = null;
		if(search.equals("allList")){
			list = service.selectAllProduct();
		}else if(search.equals("food")){
			list = service.selectProductByCategory(search);
		}else if(search.equals("health")){
			list = service.selectProductByCategory(search);
		}else if(search.equals("snack")){
			list = service.selectProductByCategory(search);
		}else if(search.equals("fruit")){
			list = service.selectProductByCategory(search);
		}else{
			list = service.selectProductLikeName(search);
		}
		
		model.addAttribute("productList",list);
		return "product/product_list.form";
	}
	
	@RequestMapping("/listPaging.do")
	public String listPaging(@RequestParam(defaultValue="1")int page,@RequestParam(defaultValue="false") String check,Model model){
		List<Product> list = service.selectAllProductPaging(page,model);
		model.addAttribute("productList", list);
		return "product/product_list_paging.form";
	}
}
